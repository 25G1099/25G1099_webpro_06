<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= data.name %></title>
</head>
<body>
  <h2><%= data.name %>の編集</h2>
  <form action="/legends/update/<%= data.id - 1 %>" method="POST">
    <table>
      <tr><th>項目</th><th>データ</th></tr>
      
      <tr><td>キャラクター名</td><td><input type="text" name="name" value="<%= data.name %>"></td></tr>
      <tr><td>属性</td><td><input type="text" name="coller" value="<%= data.coller %>"></td></tr>
      <tr><td>戦闘タイプ</td><td><input type="text" name="type" value="<%= data.type %>"></td></tr>
    </table>
    <input type="submit" values="登録">
  </form>
  <a href="/legends/<%= data.id - 1 %>">詳細ページに戻る</a>
</body>
</html>